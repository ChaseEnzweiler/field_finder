<% layout('./layouts/boilerplate') %> 
<h1> Edit Field</h1>
<form action="/fields/<%= field._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
    <div>
        <label for="name"> Name </label>
        <input type="text" id="name" name="field[name]" value= "<%= field.name %> " required>
    </div>
    <div>
        <label for="location"> Location </label>
        <input type="text" id="location" name="field[location]" value= "<%= field.location %> " required>
    </div>
    <button> Update Field </button>
</form>
<a href="/fields/<%= field._id %>"> Back to Field </a>
